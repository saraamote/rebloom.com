/* navigation */

.bespoke-desktop-navigation {

  display: none;

}

#mobile-navigation[type="checkbox"] {

  display: none;

}

.close-mobile-menu,
.mobile-menu-toggle {

  position: absolute;
  right: 30px;
  color: #fff;
  top: 49px;

}

.mobile-menu-toggle {

  background: url( {{ 'rebloom-menu-001.svg' | asset_url }} ) no-repeat center center;
  background-size: contain;
  white-space: nowrap;
  text-indent: 100%;
  overflow: hidden;
  z-index: 300;
  height: 15px;
  width: 40px;

}

.close-mobile-menu {

  background: url( {{ 'rebloom-menu-002.svg' | asset_url }} ) no-repeat center center;
  background-size: contain;
  white-space: nowrap;
  text-indent: 100%;
  overflow: hidden;
  z-index: 1000;
  height: 25px;
  width: 40px;
  top: 42px;

}

.bespoke-mobile-navigation {

  -webkit-transition: all 750ms ease-in-out;
  -moz-transition: all 750ms ease-in-out;
  -o-transition: all 750ms ease-in-out;
  transition: all 750ms ease-in-out;

  background: #2f1a45;
  text-align: center;
  overflow: scroll;
  position: fixed;
  z-index: 900;
  bottom: 0;
  right: -100%;
  left: 100%;
  top: 0;

}

#mobile-navigation:checked ~ .bespoke-mobile-navigation {

  right: 0;
  left: 0;

}

.bespoke-mobile-navigation li a {

  -webkit-transition: all 750ms 350ms ease-in-out;
  -moz-transition: all 750ms 350ms ease-in-out;
  -o-transition: all 750ms 350ms ease-in-out;
  transition: all 750ms 350ms ease-in-out;

  font: 700 2.5rem "nimbus-sans-condensed", sans-serif;
  border-bottom: 2px solid #2f1a45;
  text-transform: uppercase;
  letter-spacing: 0.025em;
  display: inline-block;
  margin: 40px 0 0 0;
  color: #2f1a45;

}

#mobile-navigation:checked ~ .bespoke-mobile-navigation li a {

  border-bottom: 2px solid #e0e0e0;
  color: #e0e0e0;

}


.bespoke-mobile-navigation ul {

